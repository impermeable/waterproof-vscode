@local tokens {
    LemmaEnd[@name='dotSpace'] { '.' space* }
    @else LemmaStatement
}

// Skip WaterproofTactics
@skip {} {
    Lemma {
        "Lemma" LemmaStatement LemmaEnd 
    }
}

// Remaining tokens
@tokens {
    CommentOpen { "(*" }
    CommentClose { "*)" }
    CommentChar { !CommentClose }

    Comment { CommentOpen CommentChar* CommentClose }

    space { " " | "\t" | "\n" | "\r" }
    
}

@precedence {
    WaterproofTactic, CoqSentence, BlockComment
}

@detectDelim
